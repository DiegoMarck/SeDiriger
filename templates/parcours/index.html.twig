{% extends 'base.html.twig' %}

{% block title %}Parcours index{% endblock %}

{% block body %}
    <h1>Parcours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>LieuDeDepart</th>
                <th>Lieu_d_arrivee</th>
                <th>Heure_de_depart</th>
                <th>Heure_d_arrivee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parcour in parcours %}
            <tr>
                <td>{{ parcour.id }}</td>
                <td>{{ parcour.nom }}</td>
                <td>{{ parcour.description }}</td>
                <td>{{ parcour.lieuDeDepart }}</td>
                <td>{{ parcour.lieuDArrivee }}</td>
                <td>{{ parcour.heureDeDepart ? parcour.heureDeDepart|date('H:i:s') : '' }}</td>
                <td>{{ parcour.heureDArrivee ? parcour.heureDArrivee|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_parcours_show', {'id': parcour.id}) }}">show</a>
                    <a href="{{ path('app_parcours_edit', {'id': parcour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_parcours_new') }}">Create new</a>
{% endblock %}
